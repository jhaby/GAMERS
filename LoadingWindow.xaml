<Window x:Class="GAMERS_TECH.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GAMERS_TECH"
        Background="Transparent"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="130" Width="350" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="AliceBlue" CornerRadius="14" BorderBrush="LightBlue" BorderThickness="2">
            <StackPanel Orientation="Horizontal">
                <ProgressBar
                Style="{StaticResource MaterialDesignCircularProgressBar}"
                 Value="0"
                VerticalContentAlignment="Center"
                Width="100"
                Height="100"
                IsIndeterminate="True" />
                <TextBlock Text="Loading..." x:Name="loadingText" FontSize="40" VerticalAlignment="Center" Margin="30,0,0,0" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
